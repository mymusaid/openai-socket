{
  "compilerOptions": {
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": false,
    "sourceMap": false,
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "strict": true,
    "skipLibCheck": true,
    "downlevelIteration": false,
    "importHelpers": false,
    "lib": [],
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES2021",
    "outDir": "dist"
  },
  "include": [
   "src"
  ],
  "exclude": [
    "node_modules"
  ],
  "compileOnSave": false
}
